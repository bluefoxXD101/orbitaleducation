generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(uuid())
  email          String   @unique
  passwordHash   String
  role           String
  districtId     String?
  parentOfStudentId String?
  isActive       Boolean  @default(true)
  createdAt      DateTime @default(now())
  District       District? @relation(fields: [districtId], references: [id])
}

model District {
  id         String   @id @default(uuid())
  name       String
  code       String   @unique
  plan       String   @default("BASIC")
  schoolId   String?
  ownerId    String
  createdAt  DateTime @default(now())
  Users      User[]
  Classes    Class[]
}

model Class {
  id          String   @id @default(uuid())
  districtId  String
  name        String
  teacherId   String
  studentIds  String[]
  googleClassroomId String?
  createdAt   DateTime @default(now())
}

model Group {
  id        String   @id @default(uuid())
  districtId String
  name      String
  adminIds  String[]
  autoAllow Boolean  @default(false)
  memberIds String[]
  status    String   @default("PENDING")
  createdAt DateTime @default(now())
}

model Announcement {
  id         String   @id @default(uuid())
  districtId String
  title      String
  content    String
  authorId   String
  createdAt  DateTime @default(now())
}

model Pass {
  id         String   @id @default(uuid())
  studentId  String
  issuedBy   String
  status     String   @default("ACTIVE")
  createdAt  DateTime @default(now())
}